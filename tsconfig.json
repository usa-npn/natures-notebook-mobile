{
    "compilerOptions": {
      "module": "esnext",
      "target": "ES2020",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": ["ESNext", "dom"],
      "baseUrl": ".",
      "paths": {
        "~/*": ["app/*"],
        "@/*": ["app/*"]
      }
    },
    "include": ["app/tests/**/*.ts", "app/**/*.ios.ts", "app/**/*.android.ts"],
    "files": ["./app/main.ts", "./references.d.ts", "./app/polyfills.ts"],
    "exclude": ["node_modules", "platforms", "e2e"]
  }
